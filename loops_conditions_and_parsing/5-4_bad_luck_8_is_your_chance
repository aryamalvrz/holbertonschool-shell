#!/usr/bin/env bash
#Using the local variable created i and the statements while, if, elif, else to loop
i+1
    while [ $i -le 10 ]
        do
            #echo "Best School"
    if [ $i -eq 4 ]
        then
            echo "bad luck"
    elif [ $i -eq 8 ]
        then
            echo "good luck"
    else
        echo "Best School"
    fi
    ((i++))
done 
